#define _CRT_SECURE_NO_WARNINGS

#include<stdio.h>

int main()
{
	int l = 0;
	scanf("%d", &l);
	int i = 0;
	for (i = 0; i < l; i++)
	{
		int j = 0;
		for (j=0;j<l-1-i;j++)
		{
			printf(" ");
		}
		for (j = 0; j < 2 * i + 1; j++)
		{
			printf("*");
		}
		printf("\n");
	}
	for (i = 0; i < l-1; i++)
	{
		int j = 0;
		for (j = 0; j <= i; j++)
		{
			printf(" ");
		}
		for (j = 0; j < 2 * (l-i-1)-1; j++)
		{
			printf("*");
		}
		printf("\n");
	}
	return 0;
}
